.close-trigger{
	width: 20px;
	height: 20px;
	position: absolute;
	top: 16px;
	right: 16px;
	cursor: pointer;
	span{
		position: relative;
		display: block;
		width: 20px;
		height: 20px;
		transform: rotate(45deg);
		&:before, &:after{
			content: '';
			
			position: absolute;
			top: 0;
			bottom: 0;
			right: 0;
			left: 0;
			margin: auto;
			background: #fff;
			display: block;
		}
		&::after{
			width: 100%;
			height: 2px;
			border-radius: 2px;
		}
		&::before{
			height:100%; 
			width: 2px;
			border-radius: 2px;
		}
	}
}

.mobile-menu{
	position: fixed;
	top: 0;
	bottom: 0;
	right: 0;
	left: 0;
	z-index: 100;
	background-color: #191a39;
	width: 100%;
	height: 100%;
	opacity: 0;
	transition: .3s;
	pointer-events: none;
	&.active{
		opacity: 1;
		pointer-events: auto;
	}
	.mobile-menu-inner{
		display: flex;
		flex-direction: column;
		min-height: 100%;
		padding-top: 11px;
	}
	.menu-title{
		margin-bottom: 12px;
		p{
			font-size: 24px;
			color: #fff;
			line-height: 1.27;
			text-align: center;

		}
	}
	.account-info{
		display: flex;
		margin-bottom: 24px;
		padding: 6px 16px;
		height: 48px;
		align-items: center;
		background: #252543;
		justify-content: center;
		.account-info__text{
			.account-info__email{
				color: #237bef;
				font-size: 16px;
				font-weight: 600;
			}
			.slash{
				margin-right: 5px;
				margin-left: 5px;
				color: #fff;
			}
		}
	}
	.menu-mob__link{
		display: flex;
		height: 49px;
		padding: 0 16px;
		font-size: 14px;
		text-decoration: none;
		align-items: center;
		position: relative;
		background: #252543;
		margin-bottom: 4px;
		.menu-mob__link-text{
			color: #fff;
		}
	}
}

