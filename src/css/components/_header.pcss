.burger{
	@media(min-width: 992px){
		display: none;
	}
	height: 20px;
	width: 31px;
	position: relative;
	margin-left: auto;
	cursor: pointer;
	&::before, &::after{
		content: "";
		position: absolute;
		right: 0;
		left: 0;
		width: 100%;
		height: 2px;
		background: #fff;
	}
	&::before{
		top: 0;
	}
	&::after{
		bottom: 0;
	}
	span{
		position: absolute;
		top: 0;
		bottom: 0;
		right: 0;
		left: 0;
		width: 100%;
		height: 2px;
		margin: auto;
		background: #fff;
	}
}