.support-center-wr{
	.support-center-inner{
  }
  .cont-wr{
    align-items: flex-start;
    display: flex;
    padding: 1.5em 2.8em;
    background-color: #191A39;
    @media(max-width: 1200px){
     padding: 1.5em 15px;
     @media(max-width: 992px){
      flex-direction: column;
      align-items: center;
      font-size: 1.3em;
    }

  }
}
.top-title{
  h2{

  }
}

.content-part{
  max-width: 80em;
  margin-right: 1.5em;
  @media(max-width: 1440px){
   max-width: 28em;
   padding-top: .3em;
 }
 @media(max-width: 992px){
   margin: 0 auto 2em;
   width: 100%;
 }
 .content-form{
  width: 24.75em;
  @media(max-width: 992px){
   width: 100%;
 }
 .title-wr{
   margin-bottom: 1.3em;
   h4{
     font-weight: 500;
     font-size: .75em;
     line-height: 1.2;
     text-transform: uppercase;
     color: #237BEF;
     @media(max-width: 992px){
      text-align: center;
      font-size: 1.1em;
    }
  }
}
form {
  .inputs-wr {
    .wrap-input {
      textarea {
        height: 8em;
        padding: .7em;
      }
    }
  }
  .text-area-sub-text {
    position: relative;
    line-height: .5;
    top: -.2em;
    @media(max-width: 992px){
      line-height: 1;
      text-align: center;
    }
    span {
     font-size: .7em;
     line-height: 1.15;
     color: #94C2FF;
     @media(max-width: 992px){
      position: static;
    }
  }

}
.button-wr {
  margin-top: .75em;
  display: flex;
  flex-direction: column;
  justify-content: center;
  @media(max-width: 992px){
    margin-top: .5em;
  }
  .btn {

  }
  .add-file-btn {
    width: 100%;
    background: #0F1032;
    padding: .5em .7em;
    display: flex;
    justify-content: center;
    align-items: center;
    color: #FFFFFF;
    font-size: .7em;
    margin-bottom: 1.02em;
    img{
      margin-right: .6em;
    }
  }
  .standart-btn {
    @media(min-width: 992px){
      width: 185px;
    }
    padding: .4em .7em;

  }
}
}
}

}
.questions-part{
  margin-left: auto;
  padding-top: .5em;
  @media(max-width: 992px){
   max-width: 28em;
   width: 100%;
   margin-left: 0;
 }
 .title-wr{
   margin-bottom: 1.3em;
   h4{
     font-weight: 500;
     font-size: .75em;
     line-height: 1.2;
     text-transform: uppercase;
     color: #237BEF;
     @media(max-width: 992px){
      text-align: center;
      font-size: 1.1em;
    }
  }
}

.questions-list {
  li{
   display: flex;
   justify-content: flex-start;
   padding: .5em 0;
   max--width: 385px;
   border-bottom: 1px solid #24253F;
   @media(max-width: 992px){
    justify-content: center;
    min-width: 100%;
    width: 100%;
  }
  &.icon-lnk{
    margin-top: .3em;
    &:last-child{
     margin-top: 0;
     margin-bottom: 1em;
   }
   span{
    &::after{
     display: none;
   }
 }
}
a{
 display: flex;
 align-items: center;
 &:hover{
  span{
   color: #fff;
   &::after{
    transform: translateY(0);
    opacity: 1;
  }
}
}
@media(max-width: 992px){
  justify-content: center;
  text-align: center;
}
}
span{
 font-weight: 500;
 font-size: .75em;
 line-height: 1.85;
 color: #7E849A;
 display: block;
 position: relative;
 transition: .3s;
}
}
}
}
}






.drop-wr{
  position: relative;
  &.active{
    .dropdown{
      opacity: 1;
      pointer-events:auto;
    }
  }
  &:focus{
   .wrap-input__label{
    top: -5px;
    left: 12px;
    padding: 0 2px;
    color: #94c2ff;
    background-color: #191a39;
    font-size: 10px;
    line-height: 12px;
    color: rgba(148,194,255,.5);
  }
}
.wrap-input{
  input{
    color: transparent;
    &:placeholder{
      color: rgba(148,194,255,.5);
    }
  }
}

 /*  .wrap-input__label{
    top: -5px;
