    .dropdown{
      position: absolute;
      top: 49px;
      left: 0;
      right: 0;
      border: 1px solid #6c738c;
      background-color: #191a39;
      border-radius: 0 0 4px 4px;
      z-index: 4;
      opacity: 0;
      pointer-events:none;

      .dropdown-item{
        padding: 0;
        cursor: pointer;
        &:hover, &.active{
          background-color: rgba(53,124,225,.1);
          p{
            color: #237bef;
          }
        }
        p{
          font-size: 14px;
          padding: 6px 8px;
          text-align: left;
          color: #fff;
        }
      }                    
    }


  }

  .select-txt{
    position: absolute;
    top: 17px;
    left: 12px;
    transition: all .2s ease;
    pointer-events: none;
    color: #94c2ff;
    font-size: 14px;
    line-height: 16px;
    color: #aab1c4;
    @media(max-width: 992px){
      top: 10px;

    }
  }